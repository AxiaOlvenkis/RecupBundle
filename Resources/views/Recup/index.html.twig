    <div id="recuperation">
        <button id="saveListe" disabled="disabled" class="btn btn-success">Sauvegarder la liste</button>
        <table id="tableRecup" class="table table-bordered table-stripped table-responsive">
        </table>
    </div>
    <script src="{{ asset('bundles/recup/recuperation.js') }}"></script>
    <script>
        function sauvegarde()
        {
            var DATA = "type=" + type_en_cours;

            $.ajax({
                type: "POST",
                url: "{{ path('admin_api_recup_trait')}}",
                data: DATA,
                cache: false,
                success: function(data){
                    console.log(data);
                    $("#info").append("<b>L'ajout a été un succés</b>");
                }
            });
            return false;
        }
    </script>
