{% block body %}
    <p>Recuperation des données de l'ancien site</p>
    <p id="info" style="color:red;"></p>
    <p>
        <button class="btn btn-info" id="livres">Recuperer les livres</button>
        <button class="btn btn-info" id="mangas">Recuperer les manga</button>
        <button class="btn btn-info" id="jeux">Recuperer les jeux de societe</button>
    </p><p>
        <button class="btn btn-info" id="films">Recuperer les films</button>
